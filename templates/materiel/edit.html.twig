{% extends 'base.html.twig' %}

{% block title %}Modifier Matériel{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <div class="container pt-5">

        <div class="row">
            <div class="col-10 offset-1 text-center">
                <h1 class="font-fira text-uppercase">Modifier le produit</h1>
                <hr class="col-6">
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-lg-12">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form.nom) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.prix) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.quantite) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.Created_At) }}
                </div>
                <div class="form-group text-center">
                    <input type="submit" class="btn btn-dark" value="Modifier le produit"/>
                </div>
                {{ form_end(form) }}

                <div class="text-center">
                    {{ include('materiel/_delete_form.html.twig') }}
                </div>
                <a href="{{ path('materiel_index') }}">Retour à la liste des produits</a>
            </div>
        </div>
    </div>
{% endblock %}
