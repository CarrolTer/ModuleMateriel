{% extends 'base.html.twig' %}

{% block title %}Materiel index{% endblock %}

{% block body %}
    <div class="container pt-5">

        <div class="row">
            <div class="col-10 offset-1 text-center">
                <h1 class="font-fira text-uppercase">Liste du Matériel</h1>
                <hr class="col-6">
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-lg-12" data-aos="flip-left" data-aos-duration="1000">
                <table id="data_table" class="table table-bordered " style="width:100%">
                    <thead class="thead-dark">
                    <tr class="text-center">
                        <th>Nom</th>
                        <th>Prix</th>
                        <th>Quantité</th>
                        <th>Date de création</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for materiel in materiels %}
                        <tr class="text-center">
                            <td>{{ materiel.nom }}</td>
                            <td>{{ materiel.prix }}€</td>
                            <td>{{ materiel.quantite }}</td>
                            <td>{{ materiel.CreatedAt ? materiel.CreatedAt|date('d-m-Y H:i:s') : '' }}</td>
                            <td>

                                <a href="#" data-toggle="modal" data-target="#{{ materiel.id }}">Voir</a>
{#                                <a href="{{ path('materiel_edit', {'id': materiel.id}) }}">Editer</a>#}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {{ include("materiel/show.html.twig") }}

{% endblock %}
